---
import BaseLayout from "../../layouts/BaseLayout.astro";
import WorkRow from "../../components/WorkRow.astro";
import projects from "../../data/projects";
---

<BaseLayout title="Projects" description="Projects by Hanul Park">
  <main id="content">
    <section class="work-section" aria-label="Projects list">
      {projects.map(p => (
        <WorkRow
          title={p.title}
          synopsis={p.synopsis}
          year={p.year}
          links={p.links}
          domains={p.domains}
          image={p.image}
          imageAlt={p.imageAlt}
          slug={p.slug}
        />
      ))}
    </section>
  </main>
</BaseLayout>
