---
import BaseLayout from "../../layouts/BaseLayout.astro";
import WorkRow from "../../components/WorkRow.astro";
import sketches from "../../data/sketches";
---

<BaseLayout title="Sketches" description="Sketches by Hanul Park">
  <main id="content">
    <section class="work-section" aria-label="Sketches list">
      {sketches.map(s => (
        <WorkRow
          title={s.title}
          synopsis={s.synopsis}
          year={s.year}
          links={s.links}
          domains={s.domains}
          image={s.image}
          imageAlt={s.imageAlt}
          tool={s.tool}
          code={s.code}
        />
      ))}
    </section>
  </main>
</BaseLayout>
